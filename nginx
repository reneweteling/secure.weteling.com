server {
    listen         80;
    server_name    secure.weteling.com;

    listen       443 ssl;

    ssl_certificate     /home/dokku/secure/tls/server.crt;
    ssl_certificate_key /home/dokku/secure/tls/server.key;
    ssl_protocols       TLSv1.2;
    ssl_prefer_server_ciphers on;

    client_max_body_size 30M;

    location ~ /.well-known {
        allow all;
    }


    # proxy to your local rails instance
    try_files $uri @rails;
    location @rails {
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   Host      $http_host;
        proxy_pass         http://127.0.0.1:7100;
        # add_header Access-Control-Allow-Origin *;
    }
}